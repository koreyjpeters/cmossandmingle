<section class="benefits">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="benefits__header">
        <h2 class="benefits__title h1">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <div class="benefits__subtext">{{ section.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="benefits__grid">
      {%- for block in section.blocks -%}
        <div class="benefit-card" {{ block.shopify_attributes }}>
          <div class="benefit-card__icon-wrap">
            {%- case block.settings.icon -%}
              {%- when 'shield' -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
              {%- when 'leaf' -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M2 22L12 12M2 22C4.5 20.2 6.5 17.5 7.5 14.5C8.8 10.7 7.5 6.5 4.5 3.5C4.5 3.5 1 1 1 1M12 12C14.5 13.8 16.5 16.5 17.5 19.5C18.8 23.3 17.5 27.5 14.5 30.5C14.5 30.5 11 33 11 33"></path><path d="M12 12L22 2"></path></svg>
              {%- when 'energy' -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polyline></svg>
              {%- when 'water' -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"></path></svg>
              {%- when 'check' -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
              {%- else -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line></svg>
            {%- endcase -%}
          </div>
          <h3 class="benefit-card__title">{{ block.settings.title }}</h3>
          <div class="benefit-card__text">{{ block.settings.text }}</div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CMoss Premium Benefits",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Pure Power of Sea Moss"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover why this ancient superfood is the cornerstone of modern wellness rituals."
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "shield", "label": "Shield (Immunity)" },
            { "value": "leaf", "label": "Leaf (Pure/Natural)" },
            { "value": "energy", "label": "Bolt (Energy)" },
            { "value": "water", "label": "Drop (Hydration/Skin)" },
            { "value": "check", "label": "Checkmark" }
          ],
          "default": "leaf"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "92 Essential Minerals"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Our sea moss contains almost all the minerals your body needs to thrive daily."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CMoss Premium Benefits",
      "blocks": [
        { "type": "benefit", "settings": { "icon": "leaf", "title": "Wild-Crafted" } },
        { "type": "benefit", "settings": { "icon": "shield", "title": "Immune Support" } },
        { "type": "benefit", "settings": { "icon": "water", "title": "Healthy Skin" } }
      ]
    }
  ]
}
{% endschema %}
