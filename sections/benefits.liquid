{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .cmoss-benefits-split {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 6rem;
    align-items: center;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 5rem;
  }

  @media screen and (max-width: 989px) {
    .cmoss-benefits-split {
      grid-template-columns: 1fr;
      padding: 0 1.5rem;
      gap: 4rem;
    }
  }

  .benefits-split__content {
    max-width: 400px;
  }

  .benefits-split__checklist {
    list-style: none;
    padding: 0;
    margin: 3rem 0 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .benefits-split__item {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 1.1rem;
    font-weight: 500;
  }

  .benefits-split__check {
    width: 20px;
    height: 20px;
    color: var(--cmoss-brown);
    flex-shrink: 0;
  }

  .benefits-split__images {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .benefits-split__img-wrap {
    border-radius: var(--cmoss-radius);
    overflow: hidden;
    background: #f0f0f0;
    aspect-ratio: 1/1;
  }

  .benefits-split__img-wrap:last-child {
    grid-column: span 2;
    aspect-ratio: 16/9;
  }

  .benefits-split__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
{%- endstyle -%}

<section class="section-{{ section.id }}-padding">
  <div class="cmoss-benefits-split">
    <div class="benefits-split__content">
      <h2 class="h1" style="margin-bottom: 1.5rem;">{{ section.settings.heading }}</h2>
      <div class="rte">{{ section.settings.text }}</div>
      
      <ul class="benefits-split__checklist">
        {%- for block in section.blocks -%}
          {%- if block.type == 'check_item' -%}
            <li class="benefits-split__item">
              <span class="benefits-split__check">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </span>
              {{ block.settings.text }}
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    </div>

    <div class="benefits-split__images">
      {%- assign img_count = 0 -%}
      {%- for block in section.blocks -%}
        {%- if block.type == 'image' -%}
          <div class="benefits-split__img-wrap">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 800 | image_tag: class: 'benefits-split__img' }}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          {%- assign img_count = img_count | plus: 1 -%}
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CMoss Benefits Split",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Pure Power of Sea Moss"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Discover why this ancient superfood is the cornerstone of modern wellness rituals.</p>"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 10,
      "unit": "px",
      "label": "Padding Top",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 10,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 100
    }
  ],
  "blocks": [
    {
      "type": "check_item",
      "name": "Checklist Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Authentic St. Lucian"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CMoss Benefits Split",
      "blocks": [
        { "type": "check_item", "settings": { "text": "Authentic St. Lucian" } },
        { "type": "check_item", "settings": { "text": "Wild-crafted & solar-dried" } },
        { "type": "check_item", "settings": { "text": "Clean, simple, premium" } },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
