{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .cmoss-how__header {
    margin-bottom: 4rem;
  }

  .cmoss-how__title {
    font-size: 3rem;
  }

  .cmoss-how__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  @media screen and (max-width: 749px) {
    .cmoss-how__grid {
      grid-template-columns: 1fr;
    }
  }

  .cmoss-how-item {
    position: relative;
  }

  .cmoss-how-item__image-container {
    margin-bottom: 1.5rem;
    border-radius: var(--cmoss-radius);
    overflow: hidden;
    background: #f0f0f0;
    aspect-ratio: 1 / 1;
  }

  .cmoss-how-item__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  .cmoss-how-item:hover .cmoss-how-item__image {
    transform: scale(1.05);
  }

  .cmoss-how-item__caption {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.1rem;
    font-weight: 500;
  }

  .cmoss-how-item__check {
    width: 18px;
    height: 18px;
    color: var(--cmoss-brown);
    flex-shrink: 0;
  }
{%- endstyle -%}

<section class="cmoss-how section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="cmoss-how__header">
        <h2 class="cmoss-how__title">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    <div class="cmoss-how__grid">
      {%- for block in section.blocks -%}
        <div class="cmoss-how-item" {{ block.shopify_attributes }}>
          <div class="cmoss-how-item__image-container">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 800 | image_tag: class: 'cmoss-how-item__image' }}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          <div class="cmoss-how-item__caption">
            <span class="cmoss-how-item__check">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            {{ block.settings.text }}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CMoss How To Use",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How You Use Sea Moss"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 10,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 10,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Caption",
          "default": "Add 1 tsp"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CMoss How To Use",
      "blocks": [
        { "type": "step", "settings": { "text": "Add 1 tsp" } },
        { "type": "step", "settings": { "text": "Mix into smoothie, tea, or oats" } },
        { "type": "step", "settings": { "text": "Enjoy daily" } }
      ]
    }
  ]
}
{% endschema %}
