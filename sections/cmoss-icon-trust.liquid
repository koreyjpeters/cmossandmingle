{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .cmoss-icon-trust {
    background-color: transparent;
  }

  .cmoss-icon-trust__grid {
    display: flex;
    justify-content: center;
    gap: 4rem;
    flex-wrap: wrap;
  }

  @media screen and (max-width: 749px) {
    .cmoss-icon-trust__grid {
      gap: 2rem;
    }
  }

  .cmoss-icon-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 150px;
  }

  .cmoss-icon-item__icon-wrap {
    width: 64px;
    height: 64px;
    margin-bottom: 1rem;
    opacity: 0.8;
  }

  .cmoss-icon-item__icon {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .cmoss-icon-item__text {
    font-size: 1rem;
    font-weight: 500;
    opacity: 0.7;
  }
{%- endstyle -%}

<section class="cmoss-icon-trust section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="cmoss-icon-trust__grid">
      {%- for block in section.blocks -%}
        <div class="cmoss-icon-item" {{ block.shopify_attributes }}>
          <div class="cmoss-icon-item__icon-wrap">
            {% if block.settings.icon != blank %}
              {{ block.settings.icon | image_url: width: 200 | image_tag: class: 'cmoss-icon-item__icon' }}
            {% else %}
               <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="cmoss-icon-item__icon">
                 <circle cx="12" cy="12" r="10"></circle>
                 <path d="M12 8v8M8 12h8"></path>
               </svg>
            {% endif %}
          </div>
          <span class="cmoss-icon-item__text">{{ block.settings.text }}</span>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CMoss Icon Trust",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "icon_item",
      "name": "Icon Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Wild-Crafted"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CMoss Icon Trust",
      "blocks": [
        { "type": "icon_item", "settings": { "text": "Wild-Crafted" } },
        { "type": "icon_item", "settings": { "text": "Solar-Dried" } },
        { "type": "icon_item", "settings": { "text": "Authentic St. Lucian" } }
      ]
    }
  ]
}
{% endschema %}
