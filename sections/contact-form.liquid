<section class="contact-form section" style="padding: 80px 20px; background: white;">
  <div class="wrap" style="max-width: 700px;">
    <style>
      .contact-form-wrapper {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
      }
      
      .form-field {
        margin-bottom: 24px;
      }
      
      .form-field label {
        display: block;
        font-weight: 600;
        margin-bottom: 8px;
        color: var(--dark);
      }
      
      .form-field input,
      .form-field textarea {
        width: 100%;
        padding: 14px 16px;
        border: 2px solid #e6e6ea;
        border-radius: 12px;
        font-size: 1rem;
        font-family: 'Poppins', sans-serif;
        transition: all 0.3s ease;
      }
      
      .form-field input:focus,
      .form-field textarea:focus {
        outline: none;
        border-color: var(--purple);
        box-shadow: 0 0 0 3px rgba(107, 45, 143, 0.1);
      }
      
      .form-field textarea {
        min-height: 150px;
        resize: vertical;
      }
      
      .submit-btn {
        width: 100%;
        padding: 18px 32px;
        background: linear-gradient(135deg, var(--purple) 0%, var(--orange) 100%);
        color: white;
        border: none;
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }
      
      .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(107, 45, 143, 0.3);
      }
      
      .success-message {
        background: #d4edda;
        color: #155724;
        padding: 16px;
        border-radius: 12px;
        margin-bottom: 24px;
        border: 1px solid #c3e6cb;
      }
      
      .error-message {
        background: #f8d7da;
        color: #721c24;
        padding: 16px;
        border-radius: 12px;
        margin-bottom: 24px;
        border: 1px solid #f5c6cb;
      }
    </style>
    
    <div class="contact-form-wrapper">
      {% if section.settings.heading != blank %}
        <h2 style="font-family: 'Pacifico', cursive; color: var(--burgundy); font-size: 2rem; text-align: center; margin-bottom: 30px;">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <p style="text-align: center; color: var(--text-muted); margin-bottom: 30px;">
          {{ section.settings.description }}
        </p>
      {% endif %}
      
      {% form 'contact' %}
        {% if form.posted_successfully? %}
          <div class="success-message">
            âœ“ Thanks for contacting us! We'll get back to you as soon as possible.
          </div>
        {% endif %}
        
        {% if form.errors %}
          <div class="error-message">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
        
        <div class="form-field">
          <label for="contact-name">Name *</label>
          <input 
            type="text" 
            id="contact-name" 
            name="contact[name]" 
            value="{% if form.name %}{{ form.name }}{% endif %}"
            required
          >
        </div>
        
        <div class="form-field">
          <label for="contact-email">Email *</label>
          <input 
            type="email" 
            id="contact-email" 
            name="contact[email]" 
            value="{% if form.email %}{{ form.email }}{% endif %}"
            required
          >
        </div>
        
        <div class="form-field">
          <label for="contact-phone">Phone</label>
          <input 
            type="tel" 
            id="contact-phone" 
            name="contact[phone]" 
            value="{% if form.phone %}{{ form.phone }}{% endif %}"
          >
        </div>
        
        <div class="form-field">
          <label for="contact-message">Message *</label>
          <textarea 
            id="contact-message" 
            name="contact[body]" 
            required
          >{% if form.body %}{{ form.body }}{% endif %}</textarea>
        </div>
        
        <button type="submit" class="submit-btn">
          Send Message
        </button>
      {% endform %}
      
      {% if section.settings.show_contact_info %}
        <div style="margin-top: 40px; padding-top: 40px; border-top: 1px solid #e6e6ea; text-align: center;">
          {% if section.settings.email != blank %}
            <p style="margin-bottom: 12px;">
              <strong>Email:</strong> <a href="mailto:{{ section.settings.email }}" style="color: var(--purple);">{{ section.settings.email }}</a>
            </p>
          {% endif %}
          
          {% if section.settings.phone_number != blank %}
            <p style="margin-bottom: 12px;">
              <strong>Phone:</strong> <a href="tel:{{ section.settings.phone_number }}" style="color: var(--purple);">{{ section.settings.phone_number }}</a>
            </p>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Form",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Send Us a Message"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Have a question about our sea moss? We're here to help!"
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "checkbox",
      "id": "show_contact_info",
      "label": "Show contact information",
      "default": true
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email address",
      "default": "hello@cmossandmingle.com"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone number"
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}
