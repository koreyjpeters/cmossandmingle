{%- style -%}
  .footer {
    background-color: transparent;
    padding: 6rem 0 4rem;
    border-top: 1px solid rgba(58, 36, 28, 0.05);
  }

  .footer__trust-icons {
    max-width: var(--page-width);
    margin: 0 auto 5rem;
    display: flex;
    justify-content: center;
    gap: 6rem;
    padding: 0 5rem;
  }

  @media screen and (max-width: 749px) {
    .footer__trust-icons {
      flex-direction: column;
      align-items: center;
      gap: 3rem;
      padding: 0 1.5rem;
    }
  }

  .footer__trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
  }

  .footer__trust-icon {
    width: 60px;
    height: 60px;
    opacity: 0.8;
  }

  .footer__trust-label {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--cmoss-brown);
    opacity: 0.7;
    text-transform: capitalize;
  }

  .footer__bottom {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    color: var(--cmoss-brown);
    opacity: 0.5;
  }

  @media screen and (max-width: 749px) {
    .footer__bottom {
      flex-direction: column;
      gap: 1rem;
      padding: 0 1.5rem;
    }
  }

  .footer__links {
    display: flex;
    gap: 2rem;
  }

  .footer__link {
    text-decoration: none;
    color: inherit;
  }

  .footer__link:hover {
    text-decoration: underline;
  }
{%- endstyle -%}

<footer class="footer">
  <div class="footer__trust-icons">
    <div class="footer__trust-item">
      <div class="footer__trust-icon">
        <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="1.2">
          <circle cx="32" cy="32" r="28" />
          <path d="M20 32l8 8 16-16" />
        </svg>
      </div>
      <span class="footer__trust-label">Wild-Crafted</span>
    </div>
    
    <div class="footer__trust-item">
      <div class="footer__trust-icon">
        <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="1.2">
          <circle cx="32" cy="32" r="28" />
          <path d="M32 12v40M12 32h40" />
        </svg>
      </div>
      <span class="footer__trust-label">Solar-Dried</span>
    </div>
    
    <div class="footer__trust-item">
      <div class="footer__trust-icon">
        <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="1.2">
          <circle cx="32" cy="32" r="28" />
          <path d="M32 16a16 16 0 100 32 16 16 0 000-32z" />
        </svg>
      </div>
      <span class="footer__trust-label">Authentic<br>St. Lucian</span>
    </div>
  </div>

  <div class="footer__bottom">
    <div class="footer__copyright">
      &copy; {{ 'now' | date: '%Y' }} C'Moss & Mingle. All rights reserved.
    </div>
    <div class="footer__links">
      <a href="/pages/privacy-policy" class="footer__link">Privacy Policy</a>
      <a href="/pages/terms-of-service" class="footer__link">Terms of Service</a>
      <a href="/pages/refund-policy" class="footer__link">Refund Policy</a>
    </div>
  </div>
</footer>

