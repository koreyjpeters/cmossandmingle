{%- style -%}
  .header-wrapper {
    background-color: transparent;
    position: relative;
    z-index: 10;
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2.5rem 5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  @media screen and (max-width: 989px) {
    .header-container {
      padding: 1.5rem 1.5rem;
    }
  }

  /* Left Side: Badge */
  .header__badge-wrap {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 0.9rem;
    color: var(--cmoss-brown);
  }

  .header__badge {
    background: #EEDCC4;
    padding: 4px 8px;
    border-radius: 4px;
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Right Side: Nav + Cart */
  .header__right {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .nav__links {
    display: flex;
    gap: 2.5rem;
    align-items: center;
  }

  @media screen and (max-width: 749px) {
    .nav__links {
      display: none;
    }
  }

  .nav__link {
    text-decoration: none;
    color: var(--cmoss-brown);
    font-size: 0.95rem;
    font-weight: 400;
    opacity: 0.9;
    transition: opacity 0.2s;
  }

  .nav__link:hover {
    opacity: 0.6;
  }

  .header__cart {
    display: flex;
    align-items: center;
    color: var(--cmoss-brown);
    text-decoration: none;
  }

  .header__cart svg {
    width: 20px;
    height: 20px;
  }
{%- endstyle -%}

<header class="header-wrapper">
  <div class="header-container">
    <div class="header__badge-wrap">
      <span class="header__badge">NEW!</span>
      <span class="header__badge-text">Premium Sea Moss Powder</span>
    </div>

    <div class="header__right">
      <nav class="nav__links">
        <a href="/collections/all" class="nav__link">Shop</a>
        <a href="/pages/about" class="nav__link">Our Story</a>
        <a href="/pages/faq" class="nav__link">FAQ</a>
        <a href="/pages/contact" class="nav__link">Contact</a>
      </nav>

      <a href="/cart" class="header__cart" aria-label="Cart">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "CMoss Premium Header",
  "settings": [
    {
      "type": "text",
      "id": "badge_label",
      "label": "Badge Text",
      "default": "NEW!"
    },
    {
      "type": "text",
      "id": "badge_info",
      "label": "Info Text",
      "default": "Premium Sea Moss Powder"
    }
  ]
}
{% endschema %}