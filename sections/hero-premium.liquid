<section class="hero section bubbles" style="background-image:url({{ section.settings.hero_image | image_url: width: 2400 }});">
  <div class="wrap hero-inner">
    {% if section.settings.badge != blank %}
      <span class="badge">{{ section.settings.badge }}</span>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}
    <div class="actions">
      {% if section.settings.button_label != blank %}
        <a class="btn primary" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
      {% endif %}
      {% if section.settings.secondary_label != blank %}
        <a class="btn" href="{{ section.settings.secondary_link }}" style="background:rgba(255,255,255,.16);color:#fff;border:1px solid rgba(255,255,255,.22);">{{ section.settings.secondary_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

