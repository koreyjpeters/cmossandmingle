{
  "name": "Hero Premium",
  "settings": [
    { "type": "image_picker", "id": "hero_image", "label": "Hero background image" },
    { "type": "text", "id": "badge", "label": "Badge", "default": "ðŸŒ´ St. Lucia Sourced Â· Wildcrafted Â· Sunâ€‘Cured" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Pure Sea Moss. Elevated." },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Wildcrafted in St. Lucia. Thoughtfully prepared for modern daily rituals." },
    { "type": "text", "id": "button_label", "label": "Primary button label", "default": "Shop Sea Moss" },
    { "type": "url", "id": "button_link", "label": "Primary button link" },
    { "type": "text", "id": "secondary_label", "label": "Secondary button label", "default": "Learn More" },
    { "type": "url", "id": "secondary_link", "label": "Secondary button link" }
  ],
  "presets": [
    { "name": "Hero Premium" }
  ]
}
{% endschema %}
