<section class="hero" style="background-image: url({{ section.settings.hero_background | image_url: width: 2400 }});">
  <div class="bubbles">
    {% render 'bubbles' %}
  </div>
  
  <div class="hero-inner">
    <h1>
      {{ section.settings.heading_part1 }} 
      <span class="highlight">{{ section.settings.heading_part2 }}</span>
    </h1>
    
    <p class="subheading">{{ section.settings.subheading }}</p>
    
    <div class="hero-badges">
      {% if section.settings.show_badges %}
        <span class="badge-pill sun-cured">‚òÄÔ∏è Sun-Cured</span>
        <span class="badge-pill st-lucia">üá±üá® St. Lucia Sourced</span>
        <span class="badge-pill wildcrafted">üåø Wildcrafted</span>
      {% endif %}
    </div>
    
    <div class="hero-actions">
      {% if section.settings.primary_button_text != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="btn btn-primary">
          {{ section.settings.primary_button_text }}
        </a>
      {% endif %}
      
      {% if section.settings.secondary_button_text != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="btn btn-secondary">
          {{ section.settings.secondary_button_text }} ‚ñ∂
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero - Tropical Vibe",
  "settings": [
    {
      "type": "header",
      "content": "Hero Content"
    },
    {
      "type": "text",
      "id": "heading_part1",
      "label": "Heading (Part 1)",
      "default": "Scoop the Moss."
    },
    {
      "type": "text",
      "id": "heading_part2",
      "label": "Heading (Part 2 - Highlighted)",
      "default": "Catch the Vibe."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Ethically harvested in St. Lucia. Sun-cured. Finely milled.\nPure sea moss with island energy."
    },
    {
      "type": "header",
      "content": "Badges"
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show trust badges",
      "default": true
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary button text",
      "default": "Shop the Vibe"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "What's in the Moss?"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link",
      "default": "/pages/benefits"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "hero_background",
      "label": "Background image (optional)",
      "info": "If no image is selected, gradient background will show"
    }
  ],
  "presets": [
    {
      "name": "Hero - Tropical Vibe"
    }
  ]
}
{% endschema %}
