{% assign collection = collection %}
<section class="section">
  <div class="wrap" style="padding: 24px 0;">
    <h1 style="margin: 0 0 10px;">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p style="opacity:.85;max-width:72ch">{{ collection.description }}</p>
    {% endif %}
  </div>

  <div class="wrap" style="padding-bottom: 40px;">
    {% if collection.products_count == 0 %}
      <p>No products found.</p>
    {% else %}
      <div style="display:grid;grid-template-columns:repeat(3,1fr);gap:14px;">
        {% for product in collection.products %}
          <a href="{{ product.url }}" style="text-decoration:none;color:inherit;border-radius:18px;overflow:hidden;box-shadow:0 14px 30px rgba(0,0,0,.10);background:#fff;display:block;">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | image_url: width: 1200 }}" alt="{{ product.title | escape }}" style="width:100%;height:260px;object-fit:cover;display:block;">
            {% endif %}
            <div style="padding:14px 16px;">
              <div style="font-weight:700">{{ product.title }}</div>
              <div style="opacity:.8;margin-top:6px;">{{ product.price | money }}</div>
            </div>
          </a>
        {% endfor %}
      </div>
      <style>
        @media (max-width: 900px){ .wrap > div[style*="grid-template-columns"]{grid-template-columns:repeat(2,1fr)!important;} }
        @media (max-width: 520px){ .wrap > div[style*="grid-template-columns"]{grid-template-columns:1fr!important;} }
      </style>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Main collection",
  "settings": []
}
{% endschema %}
