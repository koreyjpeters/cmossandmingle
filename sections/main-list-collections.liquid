{% assign cols = collections %}
<section class="section">
  <div class="wrap" style="padding:24px 0;">
    <h1 style="margin:0 0 10px;">Collections</h1>
  </div>
  <div class="wrap" style="padding-bottom:40px;">
    <div style="display:grid;grid-template-columns:repeat(3,1fr);gap:14px;">
      {% for c in collections %}
        <a href="{{ c.url }}" style="text-decoration:none;color:inherit;border-radius:18px;overflow:hidden;box-shadow:0 14px 30px rgba(0,0,0,.10);background:#fff;display:block;padding:16px;">
          <div style="font-weight:700">{{ c.title }}</div>
          <div style="opacity:.8;margin-top:6px;">{{ c.products_count }} items</div>
        </a>
      {% endfor %}
    </div>
    <style>
      @media (max-width: 900px){ .wrap > div[style*="grid-template-columns"]{grid-template-columns:repeat(2,1fr)!important;} }
      @media (max-width: 520px){ .wrap > div[style*="grid-template-columns"]{grid-template-columns:1fr!important;} }
    </style>
  </div>
</section>

{% schema %}
{ "name":"Main list collections", "settings":[] }
{% endschema %}
