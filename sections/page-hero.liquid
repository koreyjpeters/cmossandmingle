<section class="page-hero" style="background: linear-gradient(135deg, var(--purple) 0%, var(--orange) 100%); padding: 80px 20px; text-align: center; color: white;">
  <div class="wrap" style="max-width: 800px;">
    {% if section.settings.heading != blank %}
      <h1 style="font-family: 'Pacifico', cursive; font-size: clamp(2.5rem, 5vw, 3.5rem); margin-bottom: 20px; text-shadow: 2px 2px 4px rgba(0,0,0,0.2);">
        {{ section.settings.heading }}
      </h1>
    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <p style="font-size: clamp(1.1rem, 2vw, 1.4rem); opacity: 0.95; text-shadow: 1px 1px 2px rgba(0,0,0,0.2);">
        {{ section.settings.subheading }}
      </p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Page Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Page Title"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Page description"
    }
  ],
  "presets": [
    {
      "name": "Page Hero"
    }
  ]
}
{% endschema %}
